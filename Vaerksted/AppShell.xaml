<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Workshop.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Workshop"
    xmlns:views="clr-namespace:Workshop.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="Yu's Workshop A/S">


    <TabBar>
        <ShellContent Title="Book" ContentTemplate="{DataTemplate views:NewOrderPage}" Route="NewOrder" />
        <ShellContent Title="Calendar" Route="Calendar" ContentTemplate="{DataTemplate views:CalendarPage}" />
        <ShellContent Title="Invoice" Route="CreateInvoice" ContentTemplate="{DataTemplate views:CreateInvoicePage}" />
        <ShellContent Title="Invoices" Route="Invoices" ContentTemplate="{DataTemplate views:InvoicesPage}" />
    </TabBar>

</Shell>
